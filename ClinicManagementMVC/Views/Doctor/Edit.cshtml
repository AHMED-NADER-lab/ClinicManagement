@model ClinicManagement.Bussiness.ClinicModelMV.DoctorMV

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Doctor</h2>


@using (Html.BeginForm("EditDoctor", "Doctor"))
{
    @Html.AntiForgeryToken()
    
