@model ClinicManagement.Bussiness.ClinicModelMV.DoctorAppointmentsMV

@{
    ViewBag.Title = "Create";
}

<h2>Create Doctor Appointment</h2>


@using (Html.BeginForm("Createnewappointment", "DoctorAppointment"))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>DoctorAppointmentsMV</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Day, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Day", new SelectList(Enum.GetValues(typeof(DayOfWeek))), "Select day", new { @class = "form-control" })
                @*@Html.EditorFor(model => model.Day, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.ValidationMessageFor(model => model.Day, "", new { @class = "text-danger" })
            </div>
        </div>

  

        <div class="form-group">
            @Html.LabelFor(model => model.doctorName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("DoctorID", new SelectList(Model.DoctorList, "Id", "Name"), "Select Doctor", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.doctorName, "", new { @class = "text-danger" })
                @Html.ValidationMessage("doctorName2", "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
