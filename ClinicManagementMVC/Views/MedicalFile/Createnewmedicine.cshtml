@model ClinicManagement.Bussiness.ClinicModelMV.MedicalFileMedicinMV

@{
    ViewBag.Title = "Createnewmedicine";
}

<h2>Create new medicine for Medical File Detalies</h2>
@if (TempData["save"] != null)
{

    <p class="pp" style="display:block"> @TempData["save"]</p>

}

@using (Html.BeginForm("submitemedicine", "MedicalFile"))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    

     

        <div class="form-group">
            @Html.LabelFor(model => model.MedicalName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("medicalID", new SelectList(Model.listmedical, "Id", "Name"), "Select medical", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MedicalName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script> $(document).ready(function () {
     $(".pp").fadeOut(4000)

 })</script>
