@model IEnumerable<ClinicManagement.Bussiness.ClinicModelMV.PatientMV>

@{
    ViewBag.Title = "Index";
}

<h2>List OF the patient</h2>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
@if (TempData["ModelName"] != null)
{

    <p  class="pp alert alert-success"style="display:block"> @TempData["ModelName"]</p>

}

@if (TempData["deletmasg"] != null)
{

    <p class="pp alert alert-danger" style="display:block"> @TempData["deletmasg"]</p>

}


<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        
        <th>
            @Html.DisplayNameFor(model => model.SerialPatient)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PatientName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
    
        <th>
            @Html.DisplayNameFor(model => model.cityname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.areaname)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
       
        <td>
            @Html.DisplayFor(modelItem => item.SerialPatient)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PatientName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Age)
        </td>
  
        <td>
            @Html.DisplayFor(modelItem => item.cityname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.areaname)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {  id=item.PatientId  }) |
            <a data-toggle="modal" onclick="openpop('@item.PatientId')" data-target="#myModal">Delete</a>
        </td>
    </tr>
}

</table>




<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Modal Header</h4>
            </div>
            <div class="modal-body">
                <p>Are you want to delete.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <a class="btn btn-default" id="deleteBtn" href='/Employee/delete/" + id + "'>Delete</a>
            </div>
        </div>

    </div>
</div>

<script>
    function openpop(id) {

        $('#deleteBtn').attr("href", '/Patient/Delete/' + id)
    }



    $(document).ready(function () {
        $(".pp").fadeOut(4000)

    })
</script>
